@model EntityLayer.Concrete.Contact

<div class="contact_grid_right">
                <form asp-controller="Contact" asp-action="ContactIndex" method="post">
                    <div class="row contact_left_grid">
                        <div class="col-md-6 con-left">
                            <div class="form-group">
                                <label for="validationCustom01 my-2">Adınız</label>
                                <input class="form-control" name="ContactUserName" type="text" placeholder="" required="">
                                @Html.ValidationMessageFor(x => x.ContactUserName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput1">E-posat Adresiniz</label>
                                <input class="form-control" type="email" name="ContactMail" placeholder="" required="">
                                @Html.ValidationMessageFor(x => x.ContactMail, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="validationCustom03 my-2">Konu</label>
                                <input class="form-control" type="text" name="ContactSubject" placeholder="" required="">
                                @Html.ValidationMessageFor(x => x.ContactSubject, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6 con-right">
                            <div class="form-group">
                                <label for="textarea">Mesajınız</label>
                                <textarea id="textarea" name="ContactMessage" placeholder=""></textarea>
                                @Html.ValidationMessageFor(x => x.ContactMessage, "", new { @class = "text-danger" })
                            </div>
                            <input class="form-control" type="submit" value="Gönder">

                        </div>
                    </div>
                </form>
            </div>
