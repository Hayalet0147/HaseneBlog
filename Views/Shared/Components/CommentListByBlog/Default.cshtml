
@model IEnumerable<EntityLayer.Concrete.Comment>

     @if (Model.Count() > 0)
    {
        <h3 class="text-primary">Yorumlar</h3>
    }
    else
    {
        <h4>Hiç Yorum Yapılmamış. İlk Yorumu Sen Yap</h4>
    }

<div class="comment-top">
    <h4>Yorumlar</h4>
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                 <h5 class="mt-0">@item.CommentUserName</h5>
                 <div class="row"> <h6 class="p-1 pl-1" > <b>  @item.Commenttitle :  </b> </h6>   <h6 class="p-1">    @item.CommentContent  </h6> </div>
                
            </div>
           
        </div>
         <br />
    }
</div>